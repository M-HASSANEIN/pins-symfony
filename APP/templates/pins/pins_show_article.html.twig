<div class="container px-4 py-5" id="featured-3">
	<h2 class="pb-2 border-bottom border-primary">{{  pluralize(pins|length,"Pin","Pins") }}</h2>
	<div class="row g-4 py-5 row-cols-1 row-cols-lg-3  .flex-xl">
		{% for pin in pins %}
			<div class="feature col">

				<h2>{{pin.title}}</h2>
				<p>{{pin.description}}</p>

				<a href="{{ path("app_pin_show_datails",{id:pin.id})}}" class="icon-link">
					Show details
					<svg class="bi" width="1em" height="1em"><use xlink:href="#chevron-right"/></svg>

				</a>

			</div>
		{% endfor %}
	</div>
</div>
